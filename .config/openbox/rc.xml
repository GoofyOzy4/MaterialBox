<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">
  <!-- KEYBOARD BINDINGS -->
  <keyboard>
    <!-- TERMINAL -->
    <keybind key="W-q">
      <action name="Execute">
        <command>kitty --hold neofetch</command>
      </action>
    </keybind>
    <!-- FILE MANAGER -->
    <keybind key="W-e">
      <action name="Execute">
        <command>thunar</command>
      </action>
    </keybind>
    <!-- CLOSE WINDOW -->
    <keybind key="W-c">
      <action name="Close"/>
    </keybind>
    <!-- RECONFIGURE OPENBOX -->
    <keybind key="W-Escape">
      <action name="Reconfigure"/>
    </keybind>
    <!-- FULLSCREEN -->
    <keybind key="W-f">
      <action name="ToggleFullscreen"/>
    </keybind>
    <!-- MOVE WINDOW -->
    <keybind key="W-Left">
      <action name="MoveRelative">
        <x>-20</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-Right">
      <action name="MoveRelative">
        <x>20</x>
        <y>0</y>
      </action>
    </keybind>
    <keybind key="W-Up">
      <action name="MoveRelative">
        <x>0</x>
        <y>-20</y>
      </action>
    </keybind>
    <keybind key="W-Down">
      <action name="MoveRelative">
        <x>0</x>
        <y>20</y>
      </action>
    </keybind>
    <!-- WORKSPACES -->
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-5">
      <action name="GoToDesktop">
        <to>5</to>
      </action>
    </keybind>
    <keybind key="W-6">
      <action name="GoToDesktop">
        <to>6</to>
      </action>
    </keybind>
    <keybind key="W-7">
      <action name="GoToDesktop">
        <to>7</to>
      </action>
    </keybind>
    <keybind key="W-8">
      <action name="GoToDesktop">
        <to>8</to>
      </action>
    </keybind>
    <keybind key="W-9">
      <action name="GoToDesktop">
        <to>9</to>
      </action>
    </keybind>
    <keybind key="W-0">
      <action name="GoToDesktop">
        <to>10</to>
      </action>
    </keybind>
    <!-- MOVE WINDOW TO DESKTOP -->
    <keybind key="W-S-1">
      <action name="SendToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-S-4">
      <action name="SendToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="W-S-5">
      <action name="SendToDesktop">
        <to>5</to>
      </action>
    </keybind>
    <keybind key="W-S-6">
      <action name="SendToDesktop">
        <to>6</to>
      </action>
    </keybind>
    <keybind key="W-S-7">
      <action name="SendToDesktop">
        <to>7</to>
      </action>
    </keybind>
    <keybind key="W-S-8">
      <action name="SendToDesktop">
        <to>8</to>
      </action>
    </keybind>
    <keybind key="W-S-9">
      <action name="SendToDesktop">
        <to>9</to>
      </action>
    </keybind>
    <keybind key="W-S-0">
      <action name="SendToDesktop">
        <to>10</to>
      </action>
    </keybind>
    <!-- SCREENSHOTS -->
    <keybind key="Print">
      <action name="Execute">
        <command>sh -c 'maim ~/Pictures/$(date +%s).png'</command>
      </action>
    </keybind>
    <keybind key="W-Print">
      <action name="Execute">
        <command>maim --window "$(xdotool getactivewindow)" "~/Pictures/$(date +%s).png"</command>
      </action>
    </keybind>
    <keybind key="S-Print">
      <action name="Execute">
        <command>maim --select ~/Pictures/$(date +%s).png</command>
      </action>
    </keybind>
    <keybind key="C-Print">
      <action name="Execute">
        <command>maim | xclip -selection clipboard -t image/png</command>
      </action>
    </keybind>
    <keybind key="C-W-Print">
      <action name="Execute">
        <command>maim --window "$(xdotool getactivewindow)" | "xclip -selection clipboard -t image/png"</command>
      </action>
    </keybind>
    <keybind key="C-S-Print">
      <action name="Execute">
        <command>maim --select | xclip -selection clipboard -t image/png</command>
      </action>
    </keybind>
    <!-- VOLUME -->
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>pactl set-sink-volume @DEFAULT_SINK@ +10%</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>pactl set-sink-volume @DEFAULT_SINK@ -10%</command>
      </action>
    </keybind>
  </keyboard>
  <!-- THEME -->
  <theme>
    <keepBorder>yes</keepBorder>
    <animateIconify>yes</animateIconify>
    <titleLayout>MC</titleLayout>
    <font place="ActiveWindow">
      <name>Google Sans</name>
      <size>24</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>Google Sans</name>
      <size>24</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuHeader">
      <name>Google Sans</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuItem">
      <name>Google Sans</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Google Sans</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Google Sans</name>
      <size>11</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <name>Material3</name>
  </theme>
  <!-- FOCUS -->
  <focus>
    <focusNew>yes</focusNew>
    <followMouse>no</followMouse>
    <focusDelay>0</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
  </focus>
  <!-- PLACEMENT -->
  <placement>
    <center>yes</center>
    <policy>Smart</policy>
    <monitor>Any</monitor>
    <primaryMonitor/>
  </placement>
  <!-- RESIZE -->
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Never</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>0</x>
      <y>0</y>
    </popupFixedPosition>
  </resize>
  <!-- RESISTANCE -->
  <resistance>
    <strength>0</strength>
    <screen_edge_strength>0</screen_edge_strength>
  </resistance>
  <!-- MARGINS -->
  <margins>
    <left>0</left>
    <right>0</right>
    <top>0</top>
    <bottom>0</bottom>
  </margins>
  <!-- DESKTOPS -->
  <desktops>
    <number>3</number>
    <names/>
    <popupTime>0</popupTime>
  </desktops>
  <!-- DOCK (if used) -->
  <dock>
    <position>Bottom</position>
    <floatingX>0</floatingX>
    <floatingY>0</floatingY>
    <stacking>Above</stacking>
    <direction>Vertical</direction>
    <noStrut>no</noStrut>
    <autoHide>no</autoHide>
    <hideDelay>300</hideDelay>
    <showDelay>300</showDelay>
  </dock>

</openbox_config>
